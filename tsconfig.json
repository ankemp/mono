{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@mono/fb-auth": ["libs/fb-auth/src/index.ts"],
      "@mono/navigation": ["libs/navigation/src/index.ts"],
      "@mono/fb-user-profile": ["libs/fb-user-profile/src/index.ts"],
      "@mono/ui-state": ["libs/ui-state/src/index.ts"],
      "@mono/notification-banner": ["libs/notification-banner/src/index.ts"],
      "@mono/script-loader": ["libs/script-loader/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
